<header class="mdl-layout__header">
    <div class="mdl-layout__header-row">
        <span class="mdl-layout-title"><a id="nav-home-link" href="<%= theme.header_url %>"><%- theme.header_title %></a></span>
        <div class="mdl-layout-spacer"></div>
        <nav class="mdl-navigation mdl-layout--large-screen-only">
            <% for (var i in theme.header_items) { %>
                <a class="mdl-navigation__link" href="<%- url_for(theme.header_items[i]) %>"><%= i %></a>
            <% } %>
        </nav>
    </div>
</header>
<div class="mdl-layout__drawer">
    <span class="mdl-layout-title"><%- theme.drawer_title %></span>
    <nav class="mdl-navigation">
        <% for (var i in theme.drawer_items) { %>
            <a class="mdl-navigation__link" href="<%- url_for(theme.drawer_items[i]) %>"><%= i %></a>
        <% } %>
    </nav>
</div>